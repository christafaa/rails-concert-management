<div class="login bottom">
  <h5>Create a new User:</h5>

  <%= render partial: "application/errors", locals: {object: @user} %>

  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back", "/" %>
</div>
