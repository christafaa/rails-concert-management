<div class="login bottom">
  <%= form_tag "/sessions" do %>
    <%= label_tag :username, "Username:" %>
    <%= text_field_tag :username %><br><br>
    <%= label_tag :password, "Password:" %>
    <%= password_field_tag :password %><br><br>
    <%= submit_tag "Log in" %>
  <% end %>

  <p>Enter "demo" as username and password to log in.</p>

  <h5><%= link_to "Log in with GitHub", "/auth/github" %></h5>

  <h5><%= link_to "Create an Account", new_user_path %></h5>
</div>
