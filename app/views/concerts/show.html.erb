<h5>Title: <%= @concert.title %></h5>

<p><strong>Date:</strong> <%= display_date(@concert) %></p>

<p><strong>Venue:</strong> <%= @concert.venue %></p>

<p><%= link_to "Edit Concert Details", edit_concert_path(@concert) %><p>

<p><strong>Attendees:</strong></p>

<% if @concert.attendees.empty? %>
  <ul>
    <li>None</li>
  </ul>
<% else %>
  <div class="offset-by-one columns" id="sort-display">
    <p id="sort-status"></p>
  </div>
<% end %>

<%= render "add_attendee" %>

<script>
  const id = <%= @concert.id %>;
  const action = `http://localhost:3000/concerts/${id}/attendees/sort`;
  const sortRequest = "Alphabetical";
  requestAttendees(action, sortRequest)
  addSortListener()
</script>
