<h2>Title: <%= @concert.title %></h2>

<h3>Date: <%= display_date(@concert) %></h3>

<h3>Venue: <%= @concert.venue %></h3>

<%= link_to "Edit Concert Details", edit_concert_path(@concert) %>

<h3>Attendees:</h3>

<ul>
  <% if !@concert.attendees.empty? %>
    <% @concert.attendees.uniq.each do |attendee| %>
      <li><%= link_to attendee.full_name, attendee_path(attendee) %> Seat(s): <%= display_seats(@concert, attendee) %></li>
    <% end %>
  <% else %>
    <li>None</li>
  <% end %>
</ul>

<h3>Select an existing attendee to add to concert:</h3>

<h3>Create a new attendee to add to concert:</h3>

<h3>Add an Attendee:</h3>

<%= form_tag concert_attendees_path(@concert) do %>
  <%= label_tag "attendee[first_name]", "First Name:" %>
  <%= text_field_tag "attendee[first_name]" %><br><br>
  <%= label_tag "attendee[last_name]", "Last Name:" %>
  <%= text_field_tag "attendee[last_name]" %><br><br>
  <%= label_tag "ticket[seat_number]", "Seat Number:" %>
  <%= number_field_tag "ticket[seat_number]" %><br><br>
  <%= submit_tag "Add Attendee" %>
<% end %>
